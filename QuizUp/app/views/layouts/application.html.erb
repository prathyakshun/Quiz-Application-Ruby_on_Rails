
<!DOCTYPE html>
<html>
  <head>
    <title> QuizUp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body style="background-color:#DCDCDC"> 
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "QUIZUP", '#', id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <%= link_to "Home", landingpage_path, {:style=>'color:#FFFFFF; font-size:150%',:class => 'btn btn-success'} %>
            <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, {method: :delete, :style=>'color:#FFFFFF; font-size:150%', :class  =>"btn btn-danger"} %>
              <%= link_to current_user.email, edit_user_registration_path, {:style=>'color:#FFFFFF; font-size:150%', :class => 'btn btn-primary'}%>
            <% else %>
              <%= link_to "SignUp", new_user_registration_path, {:style=>'color:#FFFFFF;,font-size:150%', :class =>'btn btn-danger'} %>
              <%= link_to "Login", new_user_session_path, {:style=>'color:#FFFFFF;font-size:150%', :class => 'btn btn-primary'} %>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <%= yield %>
      <footer class="footer">
        <small>
        </small>
        <nav>
        <ul>
          <li>Quiz up Game Â©</li>
        </ul>
        </nav>
      </footer>
    </div>
  </body>
</html>